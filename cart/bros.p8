	color(15)
	poke(0x5f58, 0x1 | 0x80)
	poke(0x5600, 4)
	poke(0x5602, 8)
end

function pad(num, digits)
	padded = tostr(num)
	diff = digits - #padded
	if diff > 0 then
		for i=1,diff do
			padded = "0"..padded
		end
	end
	return padded
end

